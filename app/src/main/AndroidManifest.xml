<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="pl.oziem.whattowatch">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:name=".WTWApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".splash.SplashActivity"
      android:configChanges="orientation|keyboardHidden|screenSize"
      android:label="@string/app_name"
      android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".main.MainActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar"/>
    <activity
      android:name=".movies.MovieListFragment"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar"/>
    <activity
      android:name=".details.MovieDetailActivity"
      android:label="@string/title_movie_detail"
      android:parentActivityName=".movies.MovieListFragment"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="pl.oziem.whattowatch.movies.MovieListFragment" />
    </activity>
    <activity
      android:name=".signin.SignInActivity"
      android:label="@string/signin"
      android:windowSoftInputMode="adjustResize"
      android:theme="@style/AppTheme.NoActionBar"/>

    <meta-data
      android:name="io.fabric.ApiKey"
      android:value="7795f3390cd2ef9c8ea5b4f0dd3f329a33e7c619" />
  </application>

</manifest>
